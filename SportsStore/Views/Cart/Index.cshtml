@model List<SportsStore.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Your Shopping Cart</h2>

@if (Model == null || !Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = item.ProductId })" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("ClearCart", "Cart")" class="btn btn-warning">Clear Cart</a>
}

<h3>Add More Products</h3>
<a href="@Url.Action("AddToCart", "Cart", new { productId = 1 })" class="btn btn-primary">Add Product 1</a>
<a href="@Url.Action("AddToCart", "Cart", new { productId = 2 })" class="btn btn-primary">Add Product 2</a>