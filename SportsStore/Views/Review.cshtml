@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Product Review Form</title>
        <link rel="stylesheet" href="styles.css"> <!-- Optional: Add your CSS file -->
    </head>
    <body>
        <div class="container">
            <h1>Submit Your Product Review</h1>
            <form action="/submit-review" method="POST">
                <!-- ReviewId (Hidden) -->
                <input type="hidden" name="ReviewId" value="">

                <!-- CustomerId (Hidden) -->
                <input type="hidden" name="CustomerId" value="">

                <!-- ProductId -->
                <div class="form-group">
                    <label for="productId">Product ID</label>
                    <input type="number" id="productId" name="ProductId" value="" required>
                </div>

                <!-- Rating -->
                <div class="form-group">
                    <label for="rating">Rating (1 to 5)</label>
                    <input type="number" id="rating" name="Rating" value="1" min="1" max="5" required>
                </div>

                <!-- Comment -->
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea id="comment" name="Comment" rows="4" required></textarea>
                </div>

                <!-- CreatedAt (Hidden) -->
                <input type="hidden" name="CreatedAt" value="">

                <button type="submit">Submit Review</button>
            </form>
        </div>

        <script src="script.js"></script> <!-- Optional: Add your JS file -->
    </body>
    </html>

}
