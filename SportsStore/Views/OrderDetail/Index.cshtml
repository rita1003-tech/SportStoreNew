@model IEnumerable<SportsStore.Models.OrderDetail>

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Order Detail</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order.OrderId</td>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.OrderDetailId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.OrderDetailId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
