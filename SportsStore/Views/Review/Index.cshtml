@model IEnumerable<SportsStore.Models.Review>

@{
    ViewData["Title"] = "Reviews";
}

<h2>Reviews</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Product</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Customer</td>
                <td>@review.Product.Name</td>
                <td>@review.Rating</td>
                <td>@review.Comment</td>
                <td>@review.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = review.ReviewId })" class="btn btn-primary">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = review.ReviewId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Create New Review</a>