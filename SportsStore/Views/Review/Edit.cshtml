@model SportsStore.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<h2>Edit Review</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ReviewId" />

    <div class="form-group">
        <label for="CustomerId">Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "CustomerId", "Name", Model.CustomerId))">
            <option value="">Select Customer</option>
        </select>
    </div>

    <div class="form-group">
        <label for="ProductId">Product</label>
        <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "ProductId", "Name", Model.ProductId))">
            <option value="">Select Product</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Rating">Rating</label>
        <input type="number" class="form-control" asp-for="Rating" min="1" max="5" />
    </div>

    <div class="form-group">
        <label for="Comment">Comment</label>
        <textarea class="form-control" asp-for="Comment"></textarea>
    </div>

    <div class="form-group">
        <label for="CreatedAt">Created At</label>
        <input type="datetime-local" class="form-control" asp-for="CreatedAt" />
    </div>

    <button type="submit" class="btn btn-primary">Update Review</button>
</form>
