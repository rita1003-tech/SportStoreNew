@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Shopping Cart</title>
        <link rel="stylesheet" href="styles.css"> <!-- Optional: Add your CSS file -->
    </head>
    <body>
        <div class="container">
            <h1>Your Shopping Cart</h1>
            <form action="/submit-cart" method="POST">
                <!-- CartId (Hidden) -->
                <input type="hidden" name="CartId" value="">

                <!-- CustomerId (Hidden) -->
                <input type="hidden" name="CustomerId" value="">

                <!-- CreatedAt (Hidden) -->
                <input type="hidden" name="CreatedAt" value="">

                <!-- Cart Items (Example) -->
                <div class="form-group">
                    <label for="cartItems">Select Product</label>
                    <select id="cartItems" name="ProductId" required>
                        <option value="">Select Product</option>
                        <!-- Dynamically populate this with product options -->
                        <option value="1">Product 1</option>
                        <option value="2">Product 2</option>
                        <option value="3">Product 3</option>
                    </select>
                </div>

                <!-- Quantity -->
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" id="quantity" name="Quantity" value="1" min="1" required>
                </div>

                <!-- Submit Button -->
                <button type="submit">Add to Cart</button>
            </form>
        </div>

        <script src="script.js"></script> <!-- Optional: Add your JS file -->
    </body>
    </html>


}
