@{
    @model SportsStore.Models.Payment

    <h2>Delete Payment</h2>

    <h3>Are you sure you want to delete this payment?</h3>
    <div>
        <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
        <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>
        <p><strong>Transaction ID:</strong> @Model.TransactionId</p>
        <p><strong>Payment Date:</strong> @Model.PaymentDate.ToShortDateString()</p>
        <p><strong>Order ID:</strong> @Model.OrderId</p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    }


}
