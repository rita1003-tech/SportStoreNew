@model SportsStore.Models.Wishlist

@{
    ViewData["Title"] = "Delete Wishlist";
}

<h1>Delete Wishlist</h1>

<div>
    <h3>Are you sure you want to delete this wishlist?</h3>
    <p>
        <strong>Product:</strong> @Model.Product.Name<br />
        <strong>Customer:</strong> @Model.Customer<br />
        <strong>Created At:</strong> @Model.CreatedAt.ToString("MM/dd/yyyy")
    </p>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="WishlistId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
