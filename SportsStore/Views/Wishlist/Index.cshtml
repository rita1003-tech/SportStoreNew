@model IEnumerable<SportsStore.Models.Wishlist>

@{
    ViewData["Title"] = "Wishlist";
}

<h1>Wishlist</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Customer</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Customer</td>
                <td>@item.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.WishlistId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.WishlistId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Add New Wishlist</a>

