@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Wishlist Form</title>
        <link rel="stylesheet" href="styles.css"> <!-- Optional: Add your CSS file -->
    </head>
    <body>
        <div class="container">
            <h1>Add Product to Wishlist</h1>
            <form action="/submit-wishlist" method="POST">
                <!-- WishlistId (Hidden) -->
                <input type="hidden" name="WishlistId" value="">

                <!-- CustomerId (Hidden) -->
                <input type="hidden" name="CustomerId" value="">

                <!-- ProductId -->
                <div class="form-group">
                    <label for="productId">Product ID</label>
                    <input type="number" id="productId" name="ProductId" value="" required>
                </div>

                <!-- CreatedAt (Hidden) -->
                <input type="hidden" name="CreatedAt" value="">

                <button type="submit">Add to Wishlist</button>
            </form>
        </div>

        <script src="script.js"></script> <!-- Optional: Add your JS file -->
    </body>
    </html>

}
