@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Order Detail Form</title>
        <link rel="stylesheet" href="styles.css"> <!-- Optional: Add your CSS file -->
    </head>
    <body>
        <div class="container">
            <h1>Order Detail Form</h1>
            <form action="/submit-order-detail" method="POST">
                <!-- OrderDetailId (Hidden) -->
                <input type="hidden" name="OrderDetailId" value="">

                <!-- OrderId -->
                <div class="form-group">
                    <label for="orderId">Order ID</label>
                    <input type="number" id="orderId" name="OrderId" value="" required>
                </div>

                <!-- ProductId -->
                <div class="form-group">
                    <label for="productId">Product ID</label>
                    <input type="number" id="productId" name="ProductId" value="" required>
                </div>

                <!-- Quantity -->
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" id="quantity" name="Quantity" value="1" min="1" required>
                </div>

                <!-- UnitPrice -->
                <div class="form-group">
                    <label for="unitPrice">Unit Price</label>
                    <input type="number" id="unitPrice" name="UnitPrice" step="0.01" value="0.00" required>
                </div>

                <button type="submit">Submit</button>
            </form>
        </div>

        <script src="script.js"></script> <!-- Optional: Add your JS file -->
    </body>
    </html>

}
