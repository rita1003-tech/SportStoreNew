@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Product Form</title>
        <link rel="stylesheet" href="styles.css"> <!-- Optional: Add your CSS file -->
    </head>
    <body>
        <div class="container">
            <h1>Product Form</h1>
            <form action="/submit-product" method="POST">
                <!-- ProductID (Hidden) -->
                <input type="hidden" name="ProductID" value="">

                <!-- Name -->
                <div class="form-group">
                    <label for="name">Product Name</label>
                    <input type="text" id="name" name="Name" value="" required>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label for="description">Product Description</label>
                    <textarea id="description" name="Description" rows="4" required></textarea>
                </div>

                <!-- Price -->
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" id="price" name="Price" value="0.00" step="0.01" required>
                </div>

                <!-- Category -->
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="CategoryId" required>
                        <option value="">Select Category</option>
                        <!-- You can dynamically load categories from your database -->
                        <option value="1">Electronics</option>
                        <option value="2">Apparel</option>
                        <option value="3">Home Goods</option>
                        <!-- Add more categories as needed -->
                    </select>
                </div>

                <!-- Stock -->
                <div class="form-group">
                    <label for="stock">Stock</label>
                    <input type="number" id="stock" name="Stock" value="0" min="0" required>
                </div>

                <!-- CreatedAt (Hidden) -->
                <input type="hidden" name="CreatedAt" value="">

                <button type="submit">Submit Product</button>
            </form>
        </div>

        <script src="script.js"></script> <!-- Optional: Add your JS file -->
    </body>
    </html>

}
