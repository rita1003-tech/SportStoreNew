@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Cart Item Form</title>
        <link rel="stylesheet" href="styles.css"> <!-- Optional: Add your CSS file -->
    </head>
    <body>
        <div class="container">
            <h1>Cart Item</h1>
            <form action="/submit-cart-item" method="POST">
                <!-- CartItemId (Hidden) -->
                <input type="hidden" name="CartItemId" value="">

                <!-- CartId -->
                <div class="form-group">
                    <label for="cartId">Cart ID</label>
                    <input type="number" id="cartId" name="CartId" value="" required>
                </div>

                <!-- ProductId -->
                <div class="form-group">
                    <label for="productId">Product ID</label>
                    <input type="number" id="productId" name="ProductId" value="" required>
                </div>

                <!-- ProductName -->
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input type="text" id="productName" name="ProductName" value="" required>
                </div>

                <!-- Quantity -->
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" id="quantity" name="Quantity" value="1" min="1" required>
                </div>

                <button type="submit">Submit</button>
            </form>
        </div>

        <script src="script.js"></script> <!-- Optional: Add your JS file -->
    </body>
    </html>
}