@model SportsStore.Models.Shipping

@{
    ViewData["Title"] = "Delete Shipping";
}

<h1>Are you sure you want to delete this shipping?</h1>

<div>
    <h3>Tracking Number: @Model.TrackingNumber</h3>
    <p>Carrier: @Model.Carrier</p>
    <p>Estimated Delivery: @Model.EstimatedDelivery.ToString("yyyy-MM-dd")</p>
    <p>Status: @Model.Status</p>
    <p>Order ID: @Model.OrderId</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ShippingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="@Url.Action("Index")">Cancel</a>

