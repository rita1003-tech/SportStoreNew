@model SportsStore.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="OrderId" value="@Model.OrderId" />

    <div class="form-group">
        <label for="CustomerId">Customer</label>
       
       <select class="form-control" id="CustomerId" name="CustomerId" required>
            @foreach (var customer in ViewBag.Customers as IEnumerable<SportsStore.Models.Customer>)
    {
        <option value="@customer.CustomerId" 
                selected="@(customer.CustomerId == Model.CustomerId ? "selected" : "")">
            @customer
        </option>
    }
</select>

    </div>

    <div class="form-group">
        <label for="OrderDate">Order Date</label>
        <input type="date" class="form-control" id="OrderDate" name="OrderDate" value="@Model.OrderDate.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" class="form-control" id="Status" name="Status" value="@Model.Status" required />
    </div>

    <div class="form-group">
        <label for="TotalAmount">Total Amount</label>
        <input type="number" class="form-control" id="TotalAmount" name="TotalAmount" value="@Model.TotalAmount" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

